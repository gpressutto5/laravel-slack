{
    "name": "gpressutto5/laravel-slack",
    "description": "Slack notification for Laravel as it should be.",
    "keywords": [
        "laravel",
        "slack"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Guilherme Pressutto",
            "email": "gpressutto5@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "illuminate/notifications": "^5.8 || ^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "illuminate/support": "^5.8 || ^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "laravel/slack-notification-channel": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "*",
        "phpunit/phpunit": "^7.0 || ^8.5.28 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Pressutto\\LaravelSlack\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Pressutto\\LaravelSlack\\ServiceProvider"
            ],
            "aliases": {
                "Slack": "Pressutto\\LaravelSlack\\Facades\\Slack"
            }
        }
    }
}
